<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/back_ground_cardview"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="Name"
                android:drawableLeft="@drawable/teacher"
                android:padding="10dp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Pradeep Rai"
                android:padding="10dp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout><!--Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:drawableLeft="@drawable/subject"
                android:padding="10dp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/teacher_subject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Android Developer"
                android:padding="10dp"
                android:textColor="@color/colorBlack"/><!--Subject-->

        </LinearLayout><!--Subject-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:padding="10dp"
                android:drawableLeft="@drawable/email"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:text="Email id"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/teacher_email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:hint="raipradeep009@gmail.com"
                android:layout_height="wrap_content" /><!--Email-->

        </LinearLayout><!--Email-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:padding="10dp"
                android:drawableLeft="@drawable/call"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:text="Mobile"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/teacher_phone_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:hint="7905307223"
                android:layout_height="wrap_content" /><!--Phone Numbet-->

        </LinearLayout><!--Mobile No-->
    </LinearLayout>

</LinearLayout>