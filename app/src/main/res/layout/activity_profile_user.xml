<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile_user">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/leftarrow"
            android:tint="@color/colorWhite"/>

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Profile"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:tint="@color/colorWhite"
            android:src="@drawable/bell"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/lyr_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                >
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/view_head_exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_ground_cardview"
                    app:strokeWidth="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="150dp"
                        android:layout_height="96dp"
                        android:src="@drawable/man"
                        app:civ_border_width="2dp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Admin"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Noida"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="50dp"
                        android:gravity="center"/>
                </com.google.android.material.card.MaterialCardView>




            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lyr_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/back_ground_cardview"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:id="@+id/lyr_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="Contact No"
                        android:padding="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="+91-9999999999"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyr_second"
                    android:layout_below="@id/lyr_first"
                    android:layout_width="match_parent"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:padding="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="raipradeep009@gmail.com"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyr_third"
                    android:layout_below="@id/lyr_second"
                    android:layout_width="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="wrap_content"
                        android:text="Blood Group"
                        android:padding="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="B positive"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                >
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_ground_cardview"
                    app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/lyr_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:padding="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="17th April 1995"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyr_class"
                    android:layout_below="@id/lyr_dob"
                    android:layout_width="match_parent"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Class"
                        android:padding="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="12th A"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyr_father"
                    android:layout_below="@id/lyr_class"
                    android:layout_width="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/lyr_address"
                        android:layout_alignTop="@+id/lyr_address"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Father's Name"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="Subedar Major SP Rai"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyr_address"
                    android:layout_below="@id/lyr_father"
                    android:layout_width="match_parent"
                    android:layout_marginTop="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/lyr_address"
                        android:layout_alignTop="@+id/lyr_address"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Address"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="Shop No 24 Fountain Plaza, Eldeco 2, Bangala Bazar, Lukcnow"
                        android:minLines="2"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyr_perma"
                    android:layout_below="@id/lyr_address"
                    android:layout_width="match_parent"
                    android:layout_marginTop="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/lyr_address"
                        android:layout_alignTop="@+id/lyr_address"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Permanent Address"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:hint="Shop No 24 Fountain Plaza, Eldeco 2, Bangala Bazar, Lukcnow"
                        android:minLines="2"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>